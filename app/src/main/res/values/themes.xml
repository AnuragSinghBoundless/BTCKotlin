<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BTCWithMVVM" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_action_bar_button</item>
        <item name="colorPrimaryVariant">@color/app_action_bar_button</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="app_layout_margin">
        <item name="android:layout_marginStart">@dimen/_13sdp</item>
        <item name="android:layout_marginEnd">@dimen/_13sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
    </style>

    <style name="text_card_view">
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="cardCornerRadius">@dimen/_8sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_heading">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="textAllCaps">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
    </style>

    <style name="dialog_heading1">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="textAllCaps">false</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="dialog_description">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>

    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/app_action_bar_button</item>
    </style>

    <style name="button_style">
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="cardCornerRadius">@dimen/_15sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/app_action_bar_button</item>
        <item name="android:layout_marginStart">@dimen/_80sdp</item>
        <item name="android:layout_marginEnd">@dimen/_80sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
    </style>

    <style name="button_home">
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="cardCornerRadius">@dimen/_15sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/app_action_bar_button</item>

    </style>

    <style name="Theme.BTCWithMVVM.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BTCWithMVVM.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BTCWithMVVM.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>