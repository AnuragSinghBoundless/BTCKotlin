<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp"
        app:cardBackgroundColor="@color/app_background"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/demandName"
                style="@style/dialog_heading"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="KJKL Demand(Diesel)"
                android:textColor="@color/app_action_bar_button" />

            <TextView
                android:id="@+id/createdBy"
                style="@style/dialog_heading1"
                android:layout_below="@+id/demandName"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_minus8sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:text="Dmd By - Op Tiwari"
                android:textSize="@dimen/_11sdp" />


            <TextView
                android:id="@+id/apprvedBy"
                style="@style/dialog_heading1"
                android:layout_below="@+id/createdBy"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_minus10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:text="Aprvd By - Op Tiwari"
                android:textSize="@dimen/_11sdp" />


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/apprvedBy"
                android:background="@color/app_action_bar_button" />

            <TextView
                android:id="@+id/vNum"
                style="@style/dialog_heading1"
                android:layout_below="@id/view"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"

                android:gravity="start"
                android:text="HR55AH-2674" />

            <TextView
                android:id="@+id/ammount"
                style="@style/dialog_heading1"
                android:layout_below="@id/view"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="start"
                android:text="9000" />

            <TextView
                android:id="@+id/nurration"
                style="@style/dialog_description"
                android:layout_below="@+id/ammount"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="demads"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/remarks"
                style="@style/dialog_description"
                android:layout_below="@+id/nurration"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_6sdp"
                android:text="Remarks"
                android:textSize="@dimen/_11sdp" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@id/remarks"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/app_action_bar_button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/payStatus"
                        style="@style/dialog_heading1"

                        android:text="Paid"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/msgCount"
                        style="@style/dialog_heading1"
                        android:text="MsgCount"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".005"
                    android:background="@color/app_action_bar_button"
                    android:minWidth="@dimen/_1sdp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/updateDemand"
                        style="@style/dialog_heading1"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Updt Dmd"
                        android:textColor="@color/app_action_bar_button"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/addMessage"
                        style="@style/dialog_heading1"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Add Msg"
                        android:textColor="@color/app_action_bar_button"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".005"
                    android:background="@color/app_action_bar_button" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/edit"
                        style="@style/dialog_heading1"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Edit"
                        android:textColor="@color/app_action_bar_button"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/history"
                        style="@style/dialog_heading1"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="History"
                        android:textColor="@color/app_action_bar_button"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/delete"
                        style="@style/dialog_heading1"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Delete"
                        android:textColor="@color/app_action_bar_button"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>